# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                               controllers.Application.index

# STATUTS
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
GET     /statuts                        controllers.Statuts.list
GET     /statuts/:id                    controllers.Statuts.id(id:String)


# PROJETS
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
GET     /projets                        controllers.Projets.list
POST    /projets/add                    controllers.Projets.add
POST    /projets/edit/:id               controllers.Projets.edit(id:String)
GET     /projets/delete/:id             controllers.Projets.delete(id:String)


# PERSONNES 
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
GET     /utilisateurs                   controllers.Utilisateurs.list
POST    /utilisateurs/add               controllers.Utilisateurs.add
POST    /utilisateurs/authenticate      controllers.Utilisateurs.authenticate
POST    /utilisateurs/edit/:id          controllers.Utilisateurs.edit(id: String)
GET     /utilisateurs/delete/:id        controllers.Utilisateurs.delete(id: String)


# TACHE
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
GET     /taches/:idProjet               controllers.Taches.listProjet(idProjet: String)
POST    /taches/add/:idProjet           controllers.Taches.add(idProjet: String)
POST    /taches/edit/:idTache           controllers.Taches.edit(idTache: String)
GET     /taches/delete/:idTache         controllers.Taches.delete(idTache: String)


# ADMIN
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
GET     /administration/delete          controllers.Application.deleteAll


# Assets
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
GET     /assets/*file                   controllers.Assets.at(path="/public", file)